<% if current_user.username == "taha.jalil" || @city.admin_id == current_user.id %>
  <%= form_for ([current_user, @city, @gallery]), :html => {:multipart => true} do |f| %>
    <% if @gallery.errors.any? %>
      <div class="error_messages">
        <h2>Form is invalid</h2>
        <ul>
          <% for message in @gallery.errors.full_messages %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :image_1, "Gallery Image 1" %><br>
      <%= f.file_field :image_1, class: "file-field" %>
    </div>

    <div class="field">
      <%= f.label :image_2, "Gallery Image 2" %><br>
      <%= f.file_field :image_2, class: "file-field" %>
    </div>

    <div class="field">
      <%= f.label :image_3, "Gallery Image 3" %><br>
      <%= f.file_field :image_3, class: "file-field" %>
    </div>

    <div class="field">
      <%= f.label :image_4, "Gallery Image 4" %><br>
      <%= f.file_field :image_4, class: "file-field" %>
    </div>

    <div class="field">
      <%= f.label :link_to_gallery, "Link to Gallery" %><br>
      <%= f.text_area :link_to_gallery, class: "login-text-field", required: true %>
    </div>

    <div class="action">
      <%= f.submit "Save", class: "button green" %>
    </div>

  <% end %>
<% else %>
  <h1>Sorry you do not have access to this page</h1>
<% end %>

<%= link_to "Back to #{@city.name}'s City Dashboard", dashboard_admin_city_path(current_user, @city), class: "button back-button white-red" %>