<% if current_user.username == "taha.jalil" || @city.admin_id == current_user.id %>
  <%= form_for ([current_user, @city, @project]), :html => {:multipart => true} do |f| %>
    <% if @project.errors.any? %>
      <div class="error_messages">
        <h2>Form is invalid</h2>
        <ul>
          <% for message in @project.errors.full_messages %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :project_name, "Project Name" %><br>
      <%= f.text_field :project_name, class: "login-text-field", required: true %>
    </div>

    <div class="field">
      <%= f.label :project_descriptiom, "Project Description" %><br>
      <%= f.text_area :project_description, class: "login-text-field", required: true %>
    </div>

    <div class="field">
      <%= f.label :names_of_team_members, "Names of Team Members" %><br>
      <%= f.text_field :names_of_team_members, class: "login-text-field", required: true %>
    </div>

    <div class="field">
      <%= f.label :project_url, "Link to Project Page (Optional)" %><br>
      <%= f.text_field :project_url, class: "login-text-field" %>
    </div>

    <div class="field">
      <%= f.label :project_video_url, "Project Video Link - a youtube or vimeo video (Optional)" %><br>
      <%= f.text_area :project_video_url, class: "login-text-field" %>
    </div>

    <div class="field">
      <%= f.label :project_photo, "Project Photo (Optional)" %><br>
      <%= f.file_field :project_photo, class: "file-field" %>
    </div>

    <div class="action">
      <%= f.submit "Save", class: "button green" %>
    </div>

  <% end %>
<% else %>
  <h1>Sorry you do not have access to this page</h1>
<% end %>

<%= link_to "Back to #{@city.name}'s City Dashboard", dashboard_admin_city_path(current_user, @city), class: "button back-button white-red" %>